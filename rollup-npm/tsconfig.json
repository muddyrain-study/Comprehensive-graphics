{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
  ]
}