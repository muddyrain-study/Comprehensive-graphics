{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
  },
  "include": [
    "src/**/*",
    "rollup.config.ts"
  ],
}